{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "console_title_template": "{{ .Folder }}",
  "palette": {
    "os": "#ACB0BE",
    "pink": "#F5C2E7",
    "lavender": "#B4BEFE",
    "blue": "#89B4FA",
    "green": "#A6E3A1",
    "yellow": "#F9E2AF",
    "peach": "#FAB387",
    "red": "#F38BA8",
    "surface0": "#313244",
    "text": "#CDD6F4"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:os",
          "template": "{{ .Icon }} "
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:blue",
          "template": "{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:pink",
          "properties": {
            "style": "agnoster_short",
            "home_icon": "~",
            "folder_icon": "\ue5fe",
            "folder_separator_icon": "/"
          },
          "template": "{{ .Path }} "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:lavender",
          "foreground_templates": [
            "{{ if gt .Ahead 0 }}p:green{{ end }}",
            "{{ if gt .Behind 0 }}p:yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:peach{{ end }}"
          ],
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "{{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} "
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "p:yellow",
          "template": "\ue235 {{ if .Venv }}({{ .Venv }}) {{ end }}{{ .Major }}.{{ .Minor }} "
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "p:green",
          "template": "\ue718 {{ .Major }}.{{ .Minor }} "
        },
        {
          "type": "go",
          "style": "plain",
          "foreground": "p:blue",
          "template": "\ue626 {{ .Major }}.{{ .Minor }} "
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:peach",
          "properties": {
            "threshold": 2000
          },
          "template": "\uf252 {{ .FormattedMs }} "
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:red",
          "foreground_templates": [
            "{{ if eq .Code 0 }}p:green{{ end }}"
          ],
          "properties": {
            "always_enabled": false
          },
          "template": "{{ if ne .Code 0 }}\uf00d {{ .Code }}{{ end }}"
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:text",
          "background": "transparent",
          "properties": {
            "time_format": "15:04:05"
          },
          "template": "\uf017 {{ .CurrentDate | date .Format }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:lavender",
          "template": "> "
        }
      ]
    }
  ]
}
